@inherits LayoutComponentBase

<div class="page @SidebarCssClass">
    <aside class="sidebar">
        <NavMenu />
    </aside>

    <div class="main-content">
        <header class="top-bar d-flex align-items-center p-2">
            <button class="menu-toggler btn btn-link" @onclick="ToggleSidebar">
                <i class="bi bi-list fs-4"></i>
            </button>
            <span class="ms-auto">Bienvenido</span>
        </header>

        <main class="content-container p-3">
            @Body
        </main>
    </div>
</div>

@code {
    private bool _isSidebarOpen = true;

    private string SidebarCssClass => _isSidebarOpen ? "sidebar-open" : "sidebar-closed";

    private void ToggleSidebar()
    {
        _isSidebarOpen = !_isSidebarOpen;
    }
}
