@code {
    private DateTime? fDesde;
    private DateTime? fHasta;
    private int fIdCaja = 0;
    private int fTurno = 0;
    private string? fCliente;

    private bool cargando = false;
    private List<Caja> cajas = new();
    private List<CobroCuota> cobros = new();
    private int maxTurnos = 3;
    
    private decimal totalMostrado = 0;
    private decimal totalEfectivo = 0;
    private decimal totalTarjetas = 0;
    private decimal totalOtros = 0;

    private CobroCuota? cobroSeleccionado;

    protected override async Task OnInitializedAsync()
    {
        var sucId = SucursalProvider.GetSucursalId();
        if (!sucId.HasValue)
        {
            var ret = System.Net.WebUtility.UrlEncode(Nav.Uri);
            Nav.NavigateTo($"/seleccionar-sucursal?returnUrl={ret}", forceLoad: true);
            return;
        }

        await using var ctx = await DbFactory.CreateDbContextAsync();
        
        // Obtener caja actual para predeterminados
        var cajaActual = await ctx.Cajas.AsNoTracking().FirstOrDefaultAsync(c => c.CajaActual == 1);
        var fechaCaja = cajaActual?.FechaActualCaja ?? DateTime.Today;
        fDesde = fechaCaja;
        fHasta = fechaCaja;
        fTurno = cajaActual?.TurnoActual ?? 0;
        maxTurnos = cajaActual?.CantTurnos ?? 3;
        
        cajas = await ctx.Cajas.AsNoTracking().OrderBy(c => c.IdCaja).ToListAsync();

        await Buscar();
    }

    private async Task Buscar()
    {
        cargando = true;
        StateHasChanged();

        try
        {
            await using var ctx = await DbFactory.CreateDbContextAsync();
            var sucId = SucursalProvider.GetSucursalId();

            var fechaDesde = fDesde ?? DateTime.Today.AddDays(-7);
            var fechaHasta = (fHasta ?? DateTime.Today).AddDays(1);

            var query = ctx.CobrosCuotas.AsNoTracking()
                .Where(c => c.FechaCobro >= fechaDesde && c.FechaCobro < fechaHasta);

            if (sucId.HasValue)
                query = query.Where(c => c.IdSucursal == sucId.Value);
            if (fIdCaja > 0)
                query = query.Where(c => c.IdCaja == fIdCaja);
            if (fTurno > 0)
                query = query.Where(c => c.Turno == fTurno);
            if (!string.IsNullOrWhiteSpace(fCliente))
            {
                var filtro = fCliente.Trim().ToLower();
                query = query.Where(c => c.Cliente != null && 
                    (c.Cliente.RazonSocial.ToLower().Contains(filtro) || 
                     c.Cliente.RUC.Contains(filtro)));
            }

            cobros = await query
                .Include(c => c.Cliente)
                .Include(c => c.Caja)
                .Include(c => c.Usuario)
                .Include(c => c.CuentaPorCobrar)
                .Include(c => c.Detalles)
                .OrderByDescending(c => c.FechaCobro)
                .ToListAsync();

            // Calcular totales (solo confirmados)
            var cobrosConfirmados = cobros.Where(c => c.Estado != "ANULADO").ToList();
            totalMostrado = cobrosConfirmados.Sum(c => c.MontoTotal);
            
            totalEfectivo = cobrosConfirmados
                .SelectMany(c => c.Detalles ?? new List<CobroDetalle>())
                .Where(d => d.MedioPago == "Efectivo" || d.MedioPago == "EFECTIVO")
                .Sum(d => d.Monto);

            totalTarjetas = cobrosConfirmados
                .SelectMany(c => c.Detalles ?? new List<CobroDetalle>())
                .Where(d => d.MedioPago == "Tarjeta D√©bito" || d.MedioPago == "Tarjeta Cr√©dito" || d.MedioPago == "TARJETA")
                .Sum(d => d.Monto);

            totalOtros = cobrosConfirmados
                .SelectMany(c => c.Detalles ?? new List<CobroDetalle>())
                .Where(d => d.MedioPago != "Efectivo" && d.MedioPago != "EFECTIVO" && 
                           d.MedioPago != "Tarjeta D√©bito" && d.MedioPago != "Tarjeta Cr√©dito" && d.MedioPago != "TARJETA")
                .Sum(d => d.Monto);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al buscar cobros: {ex.Message}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task Limpiar()
    {
        await using var ctx = await DbFactory.CreateDbContextAsync();
        var cajaActual = await ctx.Cajas.AsNoTracking().FirstOrDefaultAsync(c => c.CajaActual == 1);
        
        fDesde = cajaActual?.FechaActualCaja ?? DateTime.Today;
        fHasta = fDesde;
        fIdCaja = 0;
        fTurno = cajaActual?.TurnoActual ?? 0;
        fCliente = null;
        
        await Buscar();
    }

    private void VerDetalle(CobroCuota cobro)
    {
        cobroSeleccionado = cobro;
    }

    private void CerrarDetalle()
    {
        cobroSeleccionado = null;
    }

    private void IrAHistorial(int idCuentaPorCobrar)
    {
        Nav.NavigateTo($"/cobros/historial/{idCuentaPorCobrar}");
