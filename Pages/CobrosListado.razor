    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Cargando cobros...</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 10%">Fecha</th>
                        <th style="width: 10%">Nro. Recibo</th>
                        <th style="width: 18%">Cliente</th>
                        <th style="width: 8%">Venta</th>
                        <th class="text-end" style="width: 12%">Monto</th>
                        <th style="width: 15%">Medios de Pago</th>
                        <th style="width: 7%">Caja</th>
                        <th style="width: 6%">Turno</th>
                        <th style="width: 8%">Estado</th>
                        <th class="text-center" style="width: 6%">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!cobros.Any())
                    {
                        <tr>
                            <td colspan="10" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No se encontraron cobros con los filtros seleccionados
                            </td>
                        </tr>
                    }
                    @foreach (var cobro in cobros)
                    {
                        <tr class="@(cobro.Estado == "ANULADO" ? "table-danger" : "")">
                            <td>
                                <div>@cobro.FechaCobro.ToString("dd/MM/yyyy")</div>
                                <div class="text-muted small">@cobro.FechaCobro.ToString("HH:mm")</div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@(cobro.NumeroRecibo ?? $"COB-{cobro.IdCobro:D6}")</span>
                            </td>
                            <td>
                                <div class="fw-semibold">@(cobro.Cliente?.RazonSocial ?? "N/A")</div>
                                <div class="text-muted small">@(cobro.Cliente?.RUC ?? "")</div>
                            </td>
                            <td>
                                @if (cobro.CuentaPorCobrar?.IdVenta != null)
                                {
                                    <span class="badge bg-info">Venta #@cobro.CuentaPorCobrar.IdVenta</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="fw-bold @(cobro.Estado == "ANULADO" ? "text-decoration-line-through" : "text-success")">
                                    @cobro.MontoTotal.ToString("N0") ‚Ç≤
                                </div>
                            </td>
                            <td>
                                @if (cobro.Detalles != null && cobro.Detalles.Any())
                                {
                                    @foreach (var det in cobro.Detalles.Take(2))
                                    {
                                        <span class="badge @ObtenerBadgeMedioPago(det.MedioPago) me-1">
                                            @ObtenerIconoMedioPago(det.MedioPago) @det.Monto.ToString("N0")
                                        </span>
                                    }
                                    @if (cobro.Detalles.Count > 2)
                                    {
                                        <span class="badge bg-secondary">+@(cobro.Detalles.Count - 2)</span>
                                    }
                                }
                            </td>
                            <td>
                                <span class="badge bg-outline-dark border">@(cobro.Caja?.Nombre ?? "N/A")</span>
                            </td>
                            <td>
                                @if (cobro.Turno.HasValue)
                                {
                                    <span class="badge bg-primary">T@cobro.Turno</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (cobro.Estado == "ANULADO")
                                {
                                    <span class="badge bg-danger">Anulado</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Confirmado</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-primary" title="Ver detalles" @onclick="() => VerDetalle(cobro)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    @if (cobro.CuentaPorCobrar != null)
                                    {
                                        <button class="btn btn-outline-secondary" title="Ir a historial" 
                                                @onclick="() => IrAHistorial(cobro.IdCuentaPorCobrar)">
                                            <i class="bi bi-clock-history"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

