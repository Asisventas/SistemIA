    private async Task Exportar()
    {
        if (!cobros.Any()) return;
        var sep = ';';
        var sb = new System.Text.StringBuilder();
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var usuario = auth.User?.Identity?.Name ?? "";
        var sucNombre = SucursalProvider.GetSucursalNombre() ?? "";
        sb.AppendLine($"Generado={DateTime.Now:yyyy-MM-dd HH:mm};Usuario={usuario};Sucursal={sucNombre}");
        sb.AppendLine(string.Join(sep, new[] { "Nro", "Fecha", "Hora", "Recibo", "Cliente", "RUC", "Venta", "Monto", "Medio Pago", "Caja", "Turno", "Estado" }));
        int n = 0;
        foreach (var cobro in cobros)
        {
            var recibo = cobro.NumeroRecibo ?? $"COB-{cobro.IdCobro:D6}";
            var medio = cobro.Detalles?.FirstOrDefault()?.MedioPago ?? "-";
            string[] cols = new[]
            {
                (++n).ToString(),
                cobro.FechaCobro.ToString("dd/MM/yyyy"),
                cobro.FechaCobro.ToString("HH:mm"),
                recibo,
                cobro.Cliente?.RazonSocial?.Replace("\"", "'") ?? "",
                cobro.Cliente?.RUC ?? "",
                cobro.CuentaPorCobrar?.IdVenta.ToString() ?? "",
                cobro.MontoTotal.ToString("N0"),
                medio,
                cobro.Caja?.Nombre ?? "",
                cobro.Turno?.ToString() ?? "",
                cobro.Estado == "ANULADO" ? "Anulado" : "OK"
            };
            var line = string.Join(sep, cols.Select(v => v != null && (v.Contains(sep) || v.Contains('"') || v.Contains('\n')) ? $"\"{v.Replace("\"", "\"\"")}\"" : v));
            sb.AppendLine(line);
        }
        var utf8bom = new System.Text.UTF8Encoding(encoderShouldEmitUTF8Identifier: true);
        var bytes = utf8bom.GetBytes(sb.ToString());
        var b64 = Convert.ToBase64String(bytes);
        var file = $"ListadoCobros_{DateTime.Now:yyyyMMdd_HHmmss}.csv";
        await JS.InvokeVoidAsync("downloadFile", b64, file, "text/csv;charset=utf-8");
    }
