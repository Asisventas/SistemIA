    sb.AppendLine("<thead><tr style='background-color:#f0f0f0; font-weight:bold;'>");
    sb.AppendLine("<th>ID</th><th>Fecha</th><th>Doc.</th><th>Proveedor</th><th>Producto</th><th style='text-align:right'>Cant.</th><th style='text-align:right'>Precio</th><th style='text-align:right'>P.Venta</th><th style='text-align:right'>P.Min.</th><th style='text-align:right'>Factor</th><th style='text-align:right'>% Marg</th><th>Mon</th><th style='text-align:right'>Cambio</th><th style='text-align:right'>Importe</th><th style='text-align:right'>Importe Gs</th><th style='text-align:right'>Importe $</th><th>Usu</th><th>Caja</th><th>Turno</th>");
    sb.AppendLine("</tr></thead>");
    sb.AppendLine("<tbody>");
    foreach (var r in filas)
    {
      var factorStr = r.Factor.HasValue && r.Factor.Value > 0 ? r.Factor.Value.ToString("N2") : "—";
      var margenStr = r.PorcentajeMargen.HasValue ? $"{r.PorcentajeMargen.Value:N2}%" : "—";
      var pminStr = r.PrecioMinisterio.HasValue ? r.PrecioMinisterio.Value.ToString("N0") : "—";
      sb.AppendLine("<tr>");
      sb.AppendLine($"<td>{r.IdCompra}</td><td>{r.Fecha:dd/MM/yyyy}</td><td>{System.Net.WebUtility.HtmlEncode(r.Numero)}</td><td>{System.Net.WebUtility.HtmlEncode(r.Proveedor)}</td><td>{System.Net.WebUtility.HtmlEncode(r.Producto)}</td><td style='text-align:right'>{r.Cantidad:N2}</td><td style='text-align:right'>{r.Precio.ToString(r.Formato)}</td><td style='text-align:right'>{r.PrecioVenta:N0}</td><td style='text-align:right'>{pminStr}</td><td style='text-align:right'>{factorStr}</td><td style='text-align:right'>{margenStr}</td><td>{r.Moneda}</td><td style='text-align:right'>{(r.Cambio ?? 0):N2}</td><td style='text-align:right'>{r.Importe.ToString(r.Formato)}</td><td style='text-align:right'>{r.ImporteGs:N0}</td><td style='text-align:right'>{r.ImporteUsd:N2}</td><td>{System.Net.WebUtility.HtmlEncode(r.Usuario)}</td><td>{(r.IdCaja?.ToString() ?? "-")}</td><td>{(r.Turno?.ToString() ?? "-")}</td>");
      sb.AppendLine("</tr>");
    }
    sb.AppendLine("</tbody>");
    sb.AppendLine("<tfoot><tr style='background-color:#f0f0f0; font-weight:bold;'>");
    sb.AppendLine($"<td colspan='14' style='text-align:right'>Totales</td><td style='text-align:right'>{filas.Sum(x=>x.ImporteGs):N0}</td><td style='text-align:right'>{filas.Sum(x=>x.ImporteUsd):N2}</td><td></td><td></td><td></td>");
    sb.AppendLine("</tr></tfoot>");
    sb.AppendLine("</table>");
    return Task.FromResult(sb.ToString());
  }

