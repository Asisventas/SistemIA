  private async Task ConsultarSifen(int id)
  {
    try
    {
      using var http = new System.Net.Http.HttpClient { BaseAddress = new Uri(Nav.BaseUri) };
      // Exigir IdLote: sin IdLote no consultamos
      var ventaSel = ventas.FirstOrDefault(x => x.IdVenta == id);
      if (ventaSel == null || string.IsNullOrWhiteSpace(ventaSel.IdLote))
      {
        await JS.InvokeVoidAsync("alert", "No se puede consultar: la venta aún no tiene idLote. Primero envíe a SIFEN y obtenga el protocolo de lote.");
        return;
      }
      var url = $"ventas/{id}/consultar-sifen?idLote={System.Net.WebUtility.UrlEncode(ventaSel.IdLote)}";
  var res = await http.GetAsync(url);
      var body = await res.Content.ReadAsStringAsync();
  if (res.IsSuccessStatusCode)
      {
        // Intentar parsear JSON para mostrar bonito y ofrecer copiar consulta/respuesta
        try
        {
          using var doc = System.Text.Json.JsonDocument.Parse(body);
          var root = doc.RootElement;
          var codigo = root.TryGetProperty("codigo", out var c) ? c.GetString() : "";
          var mensaje = root.TryGetProperty("mensaje", out var m) ? m.GetString() : "";
          var cdc = root.TryGetProperty("cdc", out var cd) ? cd.GetString() : "";
          var consulta = root.TryGetProperty("consulta", out var con) ? con.GetString() : "";
          var respuesta = root.TryGetProperty("respuesta", out var r) ? r.GetString() : "";
          string dId = ""; string idLoteUsado = "";
          if (root.TryGetProperty("detalles", out var det) && det.ValueKind == System.Text.Json.JsonValueKind.Object)
          {
            dId = det.TryGetProperty("dId", out var d) ? d.GetString() ?? "" : "";
            idLoteUsado = det.TryGetProperty("idLoteUsado", out var il) ? il.GetString() ?? "" : "";
          }

          // Mostrar modal con todo el contenido
          await JS.InvokeVoidAsync("mostrarModalSifen", codigo ?? string.Empty, mensaje ?? string.Empty, consulta ?? string.Empty, respuesta ?? string.Empty, dId, idLoteUsado);
        }
        catch
        {
          await JS.InvokeVoidAsync("alert", body);
        }
      }
      else
      {
        // Si hay error, mostrar tal cual
        await JS.InvokeVoidAsync("alert", $"Error al consultar: {body}");
      }
      await Buscar();
    }
    catch (Exception ex)
    {
      await JS.InvokeVoidAsync("alert", $"No se pudo consultar SIFEN: {ex.Message}");
    }
  }

