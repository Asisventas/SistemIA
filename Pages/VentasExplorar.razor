    foreach (var v in ventas)
    {
      string[] cols = new[]
      {
        v.IdVenta.ToString(),
        v.Fecha.ToString("yyyy-MM-dd"),
        v.ClienteNombre,
        v.Numero ?? "",
        v.Moneda,
