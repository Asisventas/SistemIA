                // Compras y Pagos (EGRESOS)
                ComprasContado = comprasContado.Sum(c => c.Total),
                CantComprasContado = comprasContado.Count,
                ComprasCredito = comprasCredito.Sum(c => c.Total),
                CantComprasCredito = comprasCredito.Count,
                PagosProveedores = totalPagosProveedores,
                CantPagosProveedores = pagosProveedores.Count,
