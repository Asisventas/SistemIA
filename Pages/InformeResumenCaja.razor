            };

            resumen.TotalIngresos = resumen.VentasContado + resumen.CobrosCredito;

            // Desglose por medio de pago (ahora usando ComposicionCajaDetalle)
            var desglose = new Dictionary<string, decimal>();
            
            // Agregar desglose desde ComposicionCajaDetalle
            if (efectivoRecibidoVentas - vueltoTotal > 0)
                desglose["Efectivo"] = efectivoRecibidoVentas - vueltoTotal;
            if (totalTarjetas > 0)
                desglose["Tarjeta"] = totalTarjetas;
            if (totalChequesDia > 0)
                desglose["Cheque del Día"] = totalChequesDia;
            if (totalChequesDiferidos > 0)
                desglose["Cheque Diferido"] = totalChequesDiferidos;
            if (totalTransferencias > 0)
                desglose["Transferencia"] = totalTransferencias;
            if (totalQR > 0)
                desglose["QR"] = totalQR;
            if (totalBilletera > 0)
                desglose["Billetera"] = totalBilletera;
            if (totalVales > 0)
                desglose["Vale"] = totalVales;
            
            // Agregar cobros al desglose
            foreach (var c in cobros)
            {
                foreach (var d in c.Detalles ?? new List<CobroDetalle>())
