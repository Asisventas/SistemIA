                    MedioPago = "EFECTIVO",
                    Monto = -comp.Total, // Negativo porque es egreso
                    IdCaja = comp.IdCaja ?? 0,
                    Turno = comp.Turno ?? 0
                });
            }
            
            // Agregar pagos a proveedores (egresos)
            foreach (var pago in pagosProveedores)
            {
                operaciones.Add(new OperacionCaja
                {
                    Fecha = pago.FechaPago,
                    Tipo = "Pago Proveedor",
