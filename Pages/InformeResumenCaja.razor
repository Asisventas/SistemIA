                    Monto = v.Estado == "Anulada" ? -v.Total : v.Total,
                    IdCaja = v.IdCaja ?? 0,
                    Turno = v.Turno ?? 0
                });
            }
            foreach (var c in cobros)
            {
                operaciones.Add(new OperacionCaja
                {
                    Fecha = c.FechaCobro,
                    Tipo = "Cobro",
                    Documento = c.NumeroRecibo ?? $"REC-{c.IdCobro}",
