@page "/pedidos/explorar"
@using Microsoft.EntityFrameworkCore
@using SistemIA.Models
@using SistemIA.Services
@inject IDbContextFactory<AppDbContext> DbFactory
@inject NavigationManager NavManager
@inject ICajaProvider CajaProvider
@inject ISucursalProvider SucursalProvider

<PageTitle>Explorador de Pedidos</PageTitle>

<PageProtection Modulo="/pedidos/explorar" Permiso="VIEW">

<div class="container-fluid py-3">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">
            <i class="bi bi-receipt text-primary me-2"></i>
            Explorador de Pedidos
        </h3>
        <div class="text-muted">
            <i class="bi bi-clock me-1"></i>
            Total: <span class="fw-bold">@_pedidos.Count</span> pedido(s)
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-3 shadow-sm">
        <div class="card-header bg-light">
            <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtros de Búsqueda</h6>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-2">
                    <label class="form-label small text-muted">Fecha Desde</label>
                    <input type="date" class="form-control" @bind="_fechaDesde" />
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Fecha Hasta</label>
                    <input type="date" class="form-control" @bind="_fechaHasta" />
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Estado</label>
                    <select class="form-select" @bind="_estadoFiltro">
                        <option value="">Todos</option>
                        <option value="Abierto">Abierto</option>
                        <option value="Pagado">Pagado</option>
                        <option value="Facturado">Facturado</option>
                        <option value="Cancelado">Cancelado</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Mesa</label>
                    <select class="form-select" @bind="_mesaFiltro">
                        <option value="0">Todas</option>
                        @foreach (var mesa in _mesas)
                        {
                            <option value="@mesa.IdMesa">@mesa.TextoMostrar</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Sucursal</label>
                    <select class="form-select" @bind="_sucursalFiltro">
                        <option value="0">Todas</option>
                        @foreach (var suc in _sucursales)
                        {
                            <option value="@suc.Id">@suc.NombreSucursal</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-primary w-100" @onclick="Buscar">
                        <i class="bi bi-search me-1"></i>Buscar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Resultados -->
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="bi bi-table me-2"></i>Resultados</h6>
                <small class="text-muted">Mostrando @_pedidos.Count resultado(s)</small>
            </div>
        </div>
        <div class="table-responsive">
            @if (_cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (_pedidos.Any())
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%"><i class="bi bi-hash me-1"></i>ID</th>
                            <th>Mesa</th>
                            <th>Fecha Apertura</th>
                            <th>Fecha Cierre</th>
                            <th class="text-end">Total</th>
                            <th class="text-end">Pagado</th>
                            <th class="text-center">Estado</th>
                            <th>Sucursal</th>
                            <th style="width: 10%" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pedido in _pedidos)
                        {
                            <tr>
                                <td>@pedido.IdPedido</td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @(pedido.Mesa?.TextoMostrar ?? "Sin mesa")
                                    </span>
                                </td>
                                <td>@pedido.FechaApertura.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (pedido.FechaCierre.HasValue)
                                    {
                                        @pedido.FechaCierre.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end fw-bold">@pedido.Total.ToString("N0")</td>
                                <td class="text-end @(pedido.MontoPagado >= pedido.Total ? "text-success" : "text-warning")">
                                    @pedido.MontoPagado.ToString("N0")
                                </td>
                                <td class="text-center">
                                    @{
                                        var badgeClass = pedido.Estado switch
                                        {
                                            "Abierto" => "bg-warning text-dark",
                                            "Pagado" => "bg-success",
                                            "Facturado" => "bg-info",
                                            "Cancelado" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@pedido.Estado</span>
                                </td>
                                <td>@(pedido.Sucursal?.NombreSucursal ?? "-")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" title="Ver Detalle" 
                                                @onclick="() => VerDetalle(pedido)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        @if (pedido.Estado == "Abierto")
                                        {
                                            <a href="/mesas/pedido/@pedido.IdMesa/@pedido.IdPedido" 
                                               class="btn btn-outline-success" title="Continuar Pedido">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        @if (pedido.Estado == "Pagado")
                                        {
                                            <button class="btn btn-outline-info" title="Facturar"
                                                    @onclick="() => IrAFacturar(pedido)">
                                                <i class="bi bi-file-text"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                    <p>No se encontraron pedidos con los filtros seleccionados</p>
                </div>
            }
        </div>
    </div>

    <!-- Resumen -->
    @if (_pedidos.Any())
    {
        <div class="row mt-3">
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Total Pedidos</h6>
                        <h4 class="text-primary">@_pedidos.Count</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Total Ventas</h6>
                        <h4 class="text-success">Gs @_pedidos.Sum(p => p.Total).ToString("N0")</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Cobrado</h6>
                        <h4 class="text-info">Gs @_pedidos.Sum(p => p.MontoPagado).ToString("N0")</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Abiertos</h6>
                        <h4 class="text-warning">@_pedidos.Count(p => p.Estado == "Abierto")</h4>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal Detalle -->
@if (_mostrarDetalle && _pedidoSeleccionado != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-receipt me-2"></i>
                        Detalle Pedido #@_pedidoSeleccionado.IdPedido
                    </h5>
                    <button type="button" class="btn-close" @onclick="CerrarDetalle"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Mesa:</strong> @(_pedidoSeleccionado.Mesa?.TextoMostrar ?? "Sin mesa")
                        </div>
                        <div class="col-md-4">
                            <strong>Estado:</strong> @_pedidoSeleccionado.Estado
                        </div>
                        <div class="col-md-4">
                            <strong>Apertura:</strong> @_pedidoSeleccionado.FechaApertura.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>

                    @if (_detallesPedido.Any())
                    {
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Cant.</th>
                                    <th class="text-end">P.Unit</th>
                                    <th class="text-end">Importe</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var det in _detallesPedido)
                                {
                                    <tr>
                                        <td>
                                            @det.Descripcion
                                            @if (!string.IsNullOrEmpty(det.NotasCocina))
                                            {
                                                <br /><small class="text-muted fst-italic">@det.NotasCocina</small>
                                            }
                                        </td>
                                        <td class="text-center">@det.Cantidad</td>
                                        <td class="text-end">@det.PrecioUnitario.ToString("N0")</td>
                                        <td class="text-end">@det.Importe.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">TOTAL:</td>
                                    <td class="text-end fw-bold">Gs @_pedidoSeleccionado.Total.ToString("N0")</td>
                                </tr>
                            </tfoot>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Este pedido no tiene detalles registrados.
                        </div>
                    }

                    @if (_pagosPedido.Any())
                    {
                        <h6 class="mt-3"><i class="bi bi-cash-coin me-2"></i>Pagos Registrados</h6>
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Forma de Pago</th>
                                    <th class="text-end">Monto</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pago in _pagosPedido)
                                {
                                    <tr>
                                        <td>@pago.FechaPago.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@pago.FormaPago</td>
                                        <td class="text-end">@pago.Monto.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarDetalle">Cerrar</button>
                    @if (_pedidoSeleccionado.Estado == "Abierto")
                    {
                        <a href="/mesas/pedido/@_pedidoSeleccionado.IdMesa/@_pedidoSeleccionado.IdPedido" 
                           class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i>Editar Pedido
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}

</PageProtection>

@code {
    private bool _cargando = true;
    private List<Pedido> _pedidos = new();
    private List<Mesa> _mesas = new();
    private List<Sucursal> _sucursales = new();
    private Caja? _cajaActual;

    // Filtros - Por defecto fecha de caja
    private DateTime _fechaDesde = DateTime.Today;
    private DateTime _fechaHasta = DateTime.Today;
    private string _estadoFiltro = "";
    private int _mesaFiltro = 0;
    private int _sucursalFiltro = 0;

    // Modal detalle
    private bool _mostrarDetalle = false;
    private Pedido? _pedidoSeleccionado;
    private List<PedidoDetalle> _detallesPedido = new();
    private List<PedidoPago> _pagosPedido = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarDatosIniciales();
        await Buscar();
    }

    private async Task CargarDatosIniciales()
    {
        await using var db = await DbFactory.CreateDbContextAsync();
        
        // ========== OBTENER CAJA DE LA MISMA FORMA QUE VENTAS ==========
        // Primero intentar obtener del CajaProvider (caja seleccionada en sesión)
        var cajaIdProvider = CajaProvider.GetCajaId();
        if (cajaIdProvider.HasValue)
        {
            _cajaActual = await db.Cajas.AsNoTracking().FirstOrDefaultAsync(c => c.IdCaja == cajaIdProvider.Value);
        }
        
        // Si no hay caja en provider, buscar la marcada como actual
        if (_cajaActual == null)
        {
            _cajaActual = await db.Cajas.AsNoTracking().FirstOrDefaultAsync(c => c.CajaActual == 1);
        }
        
        // Si aún no hay, tomar la primera disponible
        if (_cajaActual == null)
        {
            _cajaActual = await db.Cajas.AsNoTracking().FirstOrDefaultAsync();
        }
        
        if (_cajaActual != null)
        {
            var fechaCaja = _cajaActual.FechaActualCaja ?? DateTime.Today;
            _fechaDesde = fechaCaja;
            _fechaHasta = fechaCaja;
            _sucursalFiltro = _cajaActual.IdSucursal ?? 0;
        }
        
        _mesas = await db.Mesas.OrderBy(m => m.Numero).ToListAsync();
        _sucursales = await db.Sucursal.OrderBy(s => s.NombreSucursal).ToListAsync();
    }

    private async Task Buscar()
    {
        _cargando = true;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();

            var query = db.Pedidos
                .Include(p => p.Mesa)
                .Include(p => p.Sucursal)
                .Where(p => p.FechaApertura.Date >= _fechaDesde.Date && p.FechaApertura.Date <= _fechaHasta.Date)
                .AsQueryable();

            if (!string.IsNullOrEmpty(_estadoFiltro))
            {
                query = query.Where(p => p.Estado == _estadoFiltro);
            }

            if (_mesaFiltro > 0)
            {
                query = query.Where(p => p.IdMesa == _mesaFiltro);
            }

            if (_sucursalFiltro > 0)
            {
                query = query.Where(p => p.IdSucursal == _sucursalFiltro);
            }

            _pedidos = await query
                .OrderByDescending(p => p.FechaApertura)
                .Take(500)
                .ToListAsync();
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task VerDetalle(Pedido pedido)
    {
        _pedidoSeleccionado = pedido;
        
        await using var db = await DbFactory.CreateDbContextAsync();
        
        _detallesPedido = await db.PedidosDetalles
            .Where(d => d.IdPedido == pedido.IdPedido)
            .OrderBy(d => d.FechaCreacion)
            .ToListAsync();

        _pagosPedido = await db.PedidosPagos
            .Where(p => p.IdPedido == pedido.IdPedido)
            .OrderBy(p => p.FechaPago)
            .ToListAsync();

        _mostrarDetalle = true;
    }

    private void CerrarDetalle()
    {
        _mostrarDetalle = false;
        _pedidoSeleccionado = null;
        _detallesPedido.Clear();
        _pagosPedido.Clear();
    }

    private void IrAFacturar(Pedido pedido)
    {
        // TODO: Implementar redirección a ventas con datos del pedido
        NavManager.NavigateTo($"/ventas?idPedido={pedido.IdPedido}");
    }
}
