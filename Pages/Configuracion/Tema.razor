@page "/configuracion/tema"
@inject IJSRuntime JS

<h3>Configuración de tema</h3>
<p class="text-muted">Elige cómo se ve la aplicación: claro, tenue o oscuro.</p>

<div class="row gy-3">
  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Tenue (recomendado)</h5>
        <p class="card-text text-muted">Fondo suave y cómodo para uso prolongado.</p>
  <button class="btn btn-outline-primary" @onclick='@(() => SetTheme("tenue"))' disabled="@(selectedTheme=="tenue")">Aplicar</button>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Claro</h5>
        <p class="card-text text-muted">Blanco clásico con alto contraste.</p>
  <button class="btn btn-outline-primary" @onclick='@(() => SetTheme("claro"))' disabled="@(selectedTheme=="claro")">Aplicar</button>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Oscuro</h5>
        <p class="card-text text-muted">Ideal para ambientes con poca luz.</p>
  <button class="btn btn-outline-primary" @onclick='@(() => SetTheme("oscuro"))' disabled="@(selectedTheme=="oscuro")">Aplicar</button>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <small class="text-muted">Preferencia guardada en este navegador.</small>
</div>

@code {
    private string selectedTheme = "tenue";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var t = await JS.InvokeAsync<string>("theme.get");
            if (!string.IsNullOrWhiteSpace(t)) selectedTheme = t;
            StateHasChanged();
        }
    }

    private async Task SetTheme(string theme)
    {
        await JS.InvokeVoidAsync("theme.apply", theme);
        selectedTheme = theme;
        StateHasChanged();
    }
}
