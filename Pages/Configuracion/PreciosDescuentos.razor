                            <option value="TODOS">üåê Todos los productos</option>
                            <option value="MARCA">üè∑Ô∏è Por Marca</option>
                            <option value="CLASIFICACION">üìÅ Por Clasificaci√≥n</option>
                        </select>
                    </div>

                    @if (_descuentoEdicion.TipoCategoria == "MARCA")
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Seleccionar Marca</label>
                            <select class="form-select" @bind="_descuentoEdicion.IdMarca">
