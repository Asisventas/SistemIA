    private System.Timers.Timer? _timerBusqueda;

    private void BuscarProductosAsync()
    {
        _timerBusqueda?.Stop();
        _timerBusqueda?.Dispose();

        if (string.IsNullOrWhiteSpace(_busquedaProducto) || _busquedaProducto.Length < 2)
        {
            _productosBusqueda.Clear();
            return;
        }

        _timerBusqueda = new System.Timers.Timer(300);
        _timerBusqueda.Elapsed += async (_, _) =>
        {
            _timerBusqueda?.Stop();
            await InvokeAsync(async () =>
            {
                await EjecutarBusquedaProductosAsync();
                StateHasChanged();
            });
        };
        _timerBusqueda.Start();
    }

    private async Task EjecutarBusquedaProductosAsync()
    {
        if (string.IsNullOrWhiteSpace(_busquedaProducto) || _busquedaProducto.Length < 2)
        {
            _productosBusqueda.Clear();
            return;
        }

        _buscandoProductos = true;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var termino = _busquedaProducto.ToLower();

            _productosBusqueda = await db.Productos
                .Where(p => p.CodigoInterno.ToLower().Contains(termino) ||
                            p.Descripcion.ToLower().Contains(termino) ||
                            (p.CodigoBarras != null && p.CodigoBarras.Contains(termino)))
                .OrderBy(p => p.Descripcion)
                .Take(50)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            _mensaje = $"‚ùå Error en b√∫squeda: {ex.Message}";
            _esError = true;
        }
        finally
        {
            _buscandoProductos = false;
        }
    }

