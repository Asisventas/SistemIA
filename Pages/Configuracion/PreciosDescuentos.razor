    private async Task GuardarDescuentoCategoria()
    {
        // Validaciones
        if (_descuentoEdicion.TipoCategoria == "MARCA" && !_descuentoEdicion.IdMarca.HasValue)
        {
            _mensaje = "‚ùå Debe seleccionar una marca";
            _esError = true;
            return;
        }
        if (_descuentoEdicion.TipoCategoria == "CLASIFICACION" && !_descuentoEdicion.IdClasificacion.HasValue)
        {
            _mensaje = "‚ùå Debe seleccionar una clasificaci√≥n";
            _esError = true;
            return;
        }
        if (_descuentoEdicion.PorcentajeDescuento < 0 || _descuentoEdicion.PorcentajeDescuento > 100)
        {
            _mensaje = "‚ùå El porcentaje debe estar entre 0 y 100";
            _esError = true;
            return;
        }

        _guardandoDescuento = true;
        StateHasChanged();

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();

            // Limpiar IDs seg√∫n tipo
            if (_descuentoEdicion.TipoCategoria == "TODOS")
            {
                _descuentoEdicion.IdMarca = null;
                _descuentoEdicion.IdClasificacion = null;
            }
            else if (_descuentoEdicion.TipoCategoria == "MARCA")
            {
                _descuentoEdicion.IdClasificacion = null;
            }
            else if (_descuentoEdicion.TipoCategoria == "CLASIFICACION")
            {
                _descuentoEdicion.IdMarca = null;
            }

            // Asignar prioridad autom√°tica seg√∫n el tipo (m√°s espec√≠fico = mayor prioridad)
            _descuentoEdicion.Prioridad = _descuentoEdicion.TipoCategoria switch
            {
                "MARCA" => 100,           // Mayor prioridad
                "CLASIFICACION" => 50,     // Prioridad media
                "TODOS" => 10,             // Menor prioridad
                _ => 0
            };

            if (_descuentoEdicion.IdDescuentoCategoria == 0)
            {
                _descuentoEdicion.FechaCreacion = DateTime.Now;
                _descuentoEdicion.UsuarioCreacion = _usuarioNombre;
                db.DescuentosCategorias.Add(_descuentoEdicion);
            }
            else
            {
                var existente = await db.DescuentosCategorias.FindAsync(_descuentoEdicion.IdDescuentoCategoria);
                if (existente != null)
                {
                    existente.TipoCategoria = _descuentoEdicion.TipoCategoria;
                    existente.IdMarca = _descuentoEdicion.IdMarca;
                    existente.IdClasificacion = _descuentoEdicion.IdClasificacion;
                    existente.PorcentajeDescuento = _descuentoEdicion.PorcentajeDescuento;
                    existente.MargenAdicionalCajero = _descuentoEdicion.MargenAdicionalCajero;
                    existente.Prioridad = _descuentoEdicion.Prioridad;
                    existente.Activo = _descuentoEdicion.Activo;
                    existente.FechaModificacion = DateTime.Now;
                    existente.UsuarioModificacion = _usuarioNombre;
                }
            }

            await db.SaveChangesAsync();

            _mensaje = "‚úÖ Descuento guardado correctamente";
            _esError = false;
            CerrarModalDescuento();
            await CargarDatos();
        }
        catch (Exception ex)
        {
            _mensaje = $"‚ùå Error: {ex.Message}";
            _esError = true;
        }
        finally
        {
            _guardandoDescuento = false;
        }
    }

