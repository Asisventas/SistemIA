@code {
    // ========== ESTADO GENERAL ==========
    private string _tabActiva = "precios";
    private bool _cargando = true;
    private string? _mensaje;
    private bool _esError;

    // ========== CONFIGURACI√ìN FARMACIA ==========
    private bool _configFarmaciaDescuentoMinisterio = false;

    // ========== LISTAS DE PRECIOS ==========
    private List<ListaPrecio> _listasPrecios = new();

    // ========== DESCUENTOS POR CATEGOR√çA ==========
    private List<DescuentoCategoria> _descuentosCategorias = new();
    private List<Marca> _marcas = new();
    private List<Clasificacion> _clasificaciones = new();
    private DescuentoCategoria _descuentoEdicion = new();
    private bool _mostrarModalDescuento;
    private bool _guardandoDescuento;

    // ========== DESCUENTOS POR PRODUCTO ==========
    private string _busquedaProducto = "";
    private bool _buscandoProductos;
    private List<Producto> _productosBusqueda = new();
    private List<Producto> _productosConDescuento = new();

    [CascadingParameter]
    private Task<AuthenticationState> AuthStateTask { get; set; } = default!;
    private string? _usuarioNombre;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateTask;
            _usuarioNombre = authState.User?.Identity?.Name;
        }
        catch { }

        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        _cargando = true;
        StateHasChanged();

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();

            // Cargar configuraci√≥n del sistema para verificar modo farmacia
            var config = await db.Set<SistemIA.Models.ConfiguracionSistema>().FirstOrDefaultAsync();
            _configFarmaciaDescuentoMinisterio = config?.FarmaciaModoActivo == true && config?.FarmaciaDescuentoBasadoEnPrecioMinisterio == true;

            // Cargar listas de precios
            _listasPrecios = await db.ListasPrecios
                .Include(l => l.Moneda)
                .OrderBy(l => l.Orden)
                .ThenBy(l => l.Nombre)
                .ToListAsync();

            // Cargar descuentos por categor√≠a
            _descuentosCategorias = await db.DescuentosCategorias
                .Include(d => d.Marca)
                .Include(d => d.Clasificacion)
                .OrderByDescending(d => d.Prioridad)
                .ThenBy(d => d.TipoCategoria)
                .ToListAsync();

            // Cargar cat√°logos para modal
            _marcas = await db.Marcas.OrderBy(m => m.NombreMarca).ToListAsync();
            _clasificaciones = await db.Clasificaciones.Where(c => c.Activo).OrderBy(c => c.Nombre).ToListAsync();

            // Cargar productos con descuento espec√≠fico
            _productosConDescuento = await db.Productos
                .Where(p => p.UsaDescuentoEspecifico || p.DescuentoAutomaticoProducto.HasValue)
                .OrderBy(p => p.Descripcion)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            _mensaje = $"‚ùå Error al cargar datos: {ex.Message}";
            _esError = true;
        }
        finally
        {
            _cargando = false;
        }
    }

    private void CambiarTab(string tab)
    {
        _tabActiva = tab;
        _mensaje = null;
