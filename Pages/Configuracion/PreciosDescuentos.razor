@page "/configuracion/precios-descuentos"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using SistemIA.Components
@using SistemIA.Shared
@inject IDbContextFactory<AppDbContext> DbFactory
@inject IJSRuntime JS

<PageProtection Modulo="/configuracion" Permiso="VIEW">

<PageTitle>Precios y Descuentos - SistemIA</PageTitle>

<div class="container-fluid">
    <h3 class="mb-4"><i class="bi bi-currency-dollar me-2"></i>Precios y Descuentos</h3>

    @if (_configFarmaciaDescuentoMinisterio)
    {
        <div class="alert alert-info d-flex align-items-center mb-3" role="alert">
            <i class="bi bi-info-circle-fill me-2 fs-5"></i>
            <div>
                <strong>Modo Farmacia Activo:</strong> Los descuentos autom√°ticos se calcular√°n como porcentaje 
                sobre el <strong>Precio Ministerio</strong> del producto.
                <br/>
                <small class="text-muted">F√≥rmula: ((Precio Ministerio - Precio Venta) / Precio Ministerio) √ó 100</small>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(_mensaje))
    {
        <div class="alert @(_esError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
            @_mensaje
            <button type="button" class="btn-close" @onclick="() => _mensaje = null"></button>
        </div>
    }

    <!-- Pesta√±as -->
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link @(_tabActiva == "precios" ? "active" : "")" 
                    type="button" @onclick='() => CambiarTab("precios")'>
                <i class="bi bi-tags me-1"></i>Listas de Precios
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(_tabActiva == "categorias" ? "active" : "")" 
                    type="button" @onclick='() => CambiarTab("categorias")'>
                <i class="bi bi-percent me-1"></i>Descuentos por Categor√≠a
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(_tabActiva == "productos" ? "active" : "")" 
                    type="button" @onclick='() => CambiarTab("productos")'>
                <i class="bi bi-box-seam me-1"></i>Descuentos por Producto
            </button>
        </li>
    </ul>

    <!-- Contenido de pesta√±as -->
    <div class="tab-content">
        <!-- TAB: Listas de Precios -->
        @if (_tabActiva == "precios")
        {
            <div class="row g-3">
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-tags me-2"></i>
                                <strong>Listas configuradas</strong>
                            </div>
                            <div class="text-muted small">Total: @_listasPrecios.Count</div>
                        </div>
                        <div class="card-body p-0">
                            @if (_cargando)
                            {
                                <div class="py-3 text-center text-muted small">
                                    <span class="spinner-border spinner-border-sm me-2"></span>Cargando listas...
                                </div>
                            }
                            else if (_listasPrecios.Count == 0)
                            {
                                <div class="py-3 text-center text-muted small">No hay listas de precios configuradas</div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm align-middle mb-0">
                                        <thead>
                                            <tr class="text-success">
                                                <th class="text-uppercase small">Lista</th>
                                                <th class="text-uppercase small">Moneda</th>
                                                <th class="text-uppercase small">Vigencia</th>
                                                <th class="text-uppercase small text-center">Predet.</th>
                                                <th class="text-uppercase small text-center">Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var l in _listasPrecios)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="fw-semibold">@l.Nombre</div>
                                                        <div class="small text-muted">@l.Descripcion</div>
                                                    </td>
                                                    <td>
                                                        <img src="@GetFlagUrl(l.Moneda?.CodigoISO)" alt="@l.Moneda?.CodigoISO" 
                                                             class="me-2" style="width:20px;height:14px;object-fit:cover;border-radius:1px;border:1px solid rgba(0,0,0,.1)" />
                                                        <span class="fw-semibold">@l.Moneda?.CodigoISO</span>
                                                        <small class="text-muted ms-1">@l.Moneda?.Nombre</small>
                                                    </td>
                                                    <td><small>@l.VigenciaDescripcion</small></td>
                                                    <td class="text-center">@(l.EsPredeterminada ? "‚úî" : "‚Äî")</td>
                                                    <td class="text-center">
                                                        @if (l.Estado)
                                                        {
                                                            <span class="badge bg-success-subtle text-success">Activa</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary-subtle text-secondary">Inactiva</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <TablaTiposCambio />
                </div>
            </div>
        }

        <!-- TAB: Descuentos por Categor√≠a -->
        @if (_tabActiva == "categorias")
        {
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-tags me-2"></i>Descuentos Autom√°ticos por Categor√≠a</h5>
                    <button class="btn btn-sm btn-light" @onclick="AbrirModalNuevoDescuento">
                        <i class="bi bi-plus-lg me-1"></i>Agregar
                    </button>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-3">
                        Configure descuentos autom√°ticos que se aplicar√°n a todos los productos de una marca, 
                        clasificaci√≥n o a todos los productos. Los descuentos espec√≠ficos por producto tienen prioridad.
                    </p>

                    @if (_descuentosCategorias.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tipo</th>
                                        <th>Categor√≠a</th>
                                        <th class="text-center">Descuento %</th>
                                        <th class="text-center" title="% m√°ximo adicional que el cajero puede modificar">Margen Cajero %</th>
                                        <th class="text-center">Activo</th>
                                        <th class="text-center" style="width: 100px;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var desc in _descuentosCategorias.OrderBy(d => d.TipoCategoria == "TODOS" ? 3 : d.TipoCategoria == "CLASIFICACION" ? 2 : 1))
                                    {
                                        <tr>
                                            <td>
                                                @if (desc.TipoCategoria == "TODOS")
                                                {
                                                    <span class="badge bg-primary">üåê Todos</span>
                                                }
                                                else if (desc.TipoCategoria == "MARCA")
                                                {
                                                    <span class="badge bg-secondary">üè∑Ô∏è Marca</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">üìÅ Clasificaci√≥n</span>
                                                }
                                            </td>
                                            <td>@desc.NombreCategoria</td>
                                            <td class="text-center fw-bold text-success">@desc.PorcentajeDescuento.ToString("N2")%</td>
                                            <td class="text-center">
                                                @if (desc.MargenAdicionalCajero > 0)
                                                {
                                                    <span class="text-info fw-semibold">+@desc.MargenAdicionalCajero.ToString("N2")%</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">‚Äî</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (desc.Activo)
                                                {
                                                    <span class="badge bg-success">S√≠</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => EditarDescuento(desc)" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarDescuentoCategoria(desc)" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-tags fs-1 d-block mb-2"></i>
                            No hay descuentos por categor√≠a configurados.<br />
                            <button class="btn btn-outline-info btn-sm mt-2" @onclick="AbrirModalNuevoDescuento">
                                <i class="bi bi-plus-lg me-1"></i>Agregar primer descuento
                            </button>
                        </div>
                    }

                    <div class="alert alert-info small mt-3 mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        <strong>Orden de aplicaci√≥n autom√°tico:</strong> Producto espec√≠fico ‚Üí Marca ‚Üí Clasificaci√≥n ‚Üí Todos.
                        El sistema aplica el descuento m√°s espec√≠fico disponible.
                    </div>
                </div>
            </div>
        }

        <!-- TAB: Descuentos por Producto -->
        @if (_tabActiva == "productos")
        {
            <div class="row">
                <div class="col-lg-5 mb-4">
                    <!-- Buscador de productos para agregar -->
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="bi bi-search me-2"></i>Buscar Producto para Agregar</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    <input type="text" class="form-control" placeholder="Buscar por c√≥digo o descripci√≥n..."
                                           @bind="_busquedaProducto" @bind:event="oninput"
                                           @onkeyup="BuscarProductosAsync" />
                                </div>
                            </div>

                            @if (_buscandoProductos)
                            {
                                <div class="text-center py-3">
                                    <span class="spinner-border spinner-border-sm"></span> Buscando...
                                </div>
                            }
                            else if (_productosBusqueda.Any())
                            {
                                <div class="list-group" style="max-height: 300px; overflow-y: auto;">
                                    @foreach (var prod in _productosBusqueda.Take(20))
                                    {
                                        var yaAgregado = _productosConDescuento.Any(p => p.IdProducto == prod.IdProducto);
                                        <button type="button" 
                                                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(yaAgregado ? "disabled" : "")"
                                                @onclick="() => AgregarProductoDescuento(prod)"
                                                disabled="@yaAgregado">
                                            <div>
                                                <div class="fw-bold">@prod.CodigoInterno</div>
                                                <small class="text-muted">@prod.Descripcion</small>
                                            </div>
                                            @if (yaAgregado)
                                            {
                                                <span class="badge bg-secondary">Ya agregado</span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-plus-circle text-success"></i>
                                            }
                                        </button>
                                    }
                                </div>
                                @if (_productosBusqueda.Count > 20)
                                {
                                    <div class="text-muted small mt-2 text-center">
                                        Mostrando 20 de @_productosBusqueda.Count resultados. Refine su b√∫squeda.
                                    </div>
                                }
                            }
                            else if (!string.IsNullOrWhiteSpace(_busquedaProducto) && _busquedaProducto.Length >= 2)
                            {
                                <div class="text-muted text-center py-3">
                                    No se encontraron productos
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-7 mb-4">
                    <!-- Lista de productos con descuento espec√≠fico -->
                    <div class="card">
                        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                            <h6 class="mb-0"><i class="bi bi-box-seam me-2"></i>Productos con Descuento Espec√≠fico</h6>
                            <span class="badge bg-dark">@_productosConDescuento.Count productos</span>
                        </div>
                        <div class="card-body p-0">
                            @if (_productosConDescuento.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>C√≥digo</th>
                                                <th>Descripci√≥n</th>
                                                <th class="text-center" style="width: 100px;">Descuento %</th>
                                                <th class="text-center" style="width: 110px;" title="% m√°ximo adicional que el cajero puede modificar">Margen Cajero %</th>
                                                <th class="text-center" style="width: 90px;">Activo</th>
                                                <th class="text-center" style="width: 60px;">Quitar</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var prod in _productosConDescuento.OrderBy(p => p.Descripcion))
                                            {
                                                <tr>
                                                    <td><code>@prod.CodigoInterno</code></td>
                                                    <td class="text-truncate" style="max-width: 200px;" title="@prod.Descripcion">
                                                        @prod.Descripcion
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="input-group input-group-sm">
                                                            <input type="number" class="form-control form-control-sm text-center"
                                                                   value="@prod.DescuentoAutomaticoProducto"
                                                                   @onchange="(e) => CambiarDescuentoProducto(prod, e)"
                                                                   min="0" max="100" step="0.01" style="width: 70px;" />
                                                            <span class="input-group-text">%</span>
                                                        </div>
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="input-group input-group-sm">
                                                            <input type="number" class="form-control form-control-sm text-center"
                                                                   value="@(prod.MargenAdicionalCajeroProducto ?? 0)"
                                                                   @onchange="(e) => CambiarMargenProducto(prod, e)"
                                                                   min="0" max="100" step="0.01" style="width: 70px;" />
                                                            <span class="input-group-text">%</span>
                                                        </div>
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="form-check form-switch d-flex justify-content-center">
                                                            <input class="form-check-input" type="checkbox"
                                                                   checked="@prod.UsaDescuentoEspecifico"
                                                                   @onchange="(e) => ToggleDescuentoActivo(prod, e)" />
                                                        </div>
                                                    </td>
                                                    <td class="text-center">
                                                        <button class="btn btn-sm btn-outline-danger" 
                                                                @onclick="() => QuitarProductoDescuento(prod)" title="Quitar">
                                                            <i class="bi bi-x-lg"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted py-4">
                                    <i class="bi bi-box-seam fs-1 d-block mb-2"></i>
                                    No hay productos con descuento espec√≠fico configurado.<br />
                                    <small>Use el buscador de la izquierda para agregar productos.</small>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="alert alert-warning small mt-3">
                        <i class="bi bi-lightbulb me-1"></i>
                        <strong>Nota:</strong> Los productos con "Activo" habilitado usar√°n su descuento espec√≠fico 
                        en lugar del descuento por categor√≠a configurado.
                    </div>
                </div>
            </div>
        }
    </div>
</div>

