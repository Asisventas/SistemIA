                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModalDescuento">Cancelar</button>
                    <button type="button" class="btn btn-info" @onclick="GuardarDescuentoCategoria" disabled="@_guardandoDescuento">
                        @if (_guardandoDescuento)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        <i class="bi bi-check-lg me-1"></i>Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

