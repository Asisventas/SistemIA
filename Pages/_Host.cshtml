@page "/_Host"
@using SistemIA
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Control de Asistencia</title>
    <base href="~/" />

    <script>
        (function () {
            try {
                var t = localStorage.getItem('theme') || 'tenue';
                document.documentElement.setAttribute('data-theme', t);
            } catch (e) { }
        })();
    </script>
    <script defer src="js/theme.js" asp-append-version="true"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@400;500&family=Inter:wght@400;500;700&display=swap" rel="stylesheet" />

    <!-- Bootstrap y estilos -->
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/main-layout.css" />
    <link rel="stylesheet" href="css/nav-menu.css" />
    <link rel="stylesheet" href="css/site.css" />
    <link rel="stylesheet" href="css/registro-directo.css" />
    <link rel="stylesheet" href="css/registro-asistencia.css" />
    <link href="SistemIA.styles.css" rel="stylesheet" />
</head>

<body>
    <app>
        <component type="typeof(App)" render-mode="Server" />
    </app>

    <!-- JsBarcode y wrapper deben cargarse antes que Blazor para garantizar disponibilidad -->
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.6/dist/JsBarcode.all.min.js"></script>
    <script src="js/barcode.js" asp-append-version="true"></script>
    
    <!-- Scripts principales -->
    <script src="_framework/blazor.server.js"></script>
    <script defer src="js/windowUtils.js" asp-append-version="true"></script>
    <script defer src="js/login.js" asp-append-version="true"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Chart.js y adaptadores -->
    <script defer src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
    
    <!-- Scripts de grÃ¡ficos -->
    <script defer src="js/graficos.js" asp-append-version="true"></script>
    
    <!-- Scripts de reconocimiento facial -->
    <script defer src="js/camera-handler.js" asp-append-version="true"></script>
    
    <!-- Scripts adicionales - SIN DEFER para disponibilidad inmediata -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
    
    <script src="js/funciones.js?v=@DateTime.Now.Ticks"></script>
</body>
</html>
