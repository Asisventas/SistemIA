    private async Task ExportarExcel()
    {
        if (!_lotes.Any()) return;
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var usuario = auth.User?.Identity?.Name ?? "";
        var suc = SucursalProvider.GetSucursalNombre() ?? "";

        using var wb = new XLWorkbook();
        var ws = wb.AddWorksheet("Lotes");
        int row = 1;
        ws.Cell(row, 1).Value = "Generado"; ws.Cell(row, 2).Value = DateTime.Now; ws.Cell(row, 2).Style.DateFormat.Format = "yyyy-MM-dd HH:mm"; row++;
        ws.Cell(row, 1).Value = "Usuario"; ws.Cell(row, 2).Value = usuario; row++;
        ws.Cell(row, 1).Value = "Sucursal"; ws.Cell(row, 2).Value = suc; row++;
        ws.Cell(row, 1).Value = "Filtros"; ws.Cell(row, 2).Value = ObtenerFiltrosTexto(); row += 2;

        var headers = new[] { "#", "Código", "Producto", "Lote", "Depósito", "Stock", "Stock Inicial", "Fecha Venc.", "Días p/Venc.", "Fecha Ingreso", "Costo Unit.", "Estado" };
        for (int c = 0; c < headers.Length; c++) ws.Cell(row, c + 1).Value = headers[c];
        ws.Range(row, 1, row, headers.Length).Style.Font.Bold = true;
        ws.Range(row, 1, row, headers.Length).Style.Fill.BackgroundColor = XLColor.LightGray;
        row++;

        int n = 0;
        decimal totalStock = 0, totalStockInicial = 0, totalValor = 0;
        foreach (var l in _lotes)
        {
            var dias = l.FechaVencimiento.HasValue ? (int)(l.FechaVencimiento.Value - DateTime.Today).TotalDays : 0;
            var estado = ObtenerEstadoLote(l);
            
            ws.Cell(row, 1).Value = ++n;
            ws.Cell(row, 2).Value = l.Producto?.CodigoBarras ?? l.Producto?.CodigoInterno ?? "";
            ws.Cell(row, 3).Value = l.Producto?.Descripcion ?? "";
            ws.Cell(row, 4).Value = l.NumeroLote;
            ws.Cell(row, 5).Value = l.Deposito?.Nombre ?? "";
            ws.Cell(row, 6).Value = l.Stock; ws.Cell(row, 6).Style.NumberFormat.Format = "#,##0.00";
            ws.Cell(row, 7).Value = l.StockInicial; ws.Cell(row, 7).Style.NumberFormat.Format = "#,##0.00";
            if (l.FechaVencimiento.HasValue)
            {
                ws.Cell(row, 8).Value = l.FechaVencimiento.Value;
                ws.Cell(row, 8).Style.DateFormat.Format = "dd/MM/yyyy";
                ws.Cell(row, 9).Value = dias;
            }
            ws.Cell(row, 10).Value = l.FechaIngreso; ws.Cell(row, 10).Style.DateFormat.Format = "dd/MM/yyyy";
            ws.Cell(row, 11).Value = l.CostoUnitario ?? 0; ws.Cell(row, 11).Style.NumberFormat.Format = "#,##0";
            ws.Cell(row, 12).Value = estado.Texto;
            
            // Resaltar según estado
            if (estado.Texto == "Vencido")
                ws.Range(row, 1, row, headers.Length).Style.Fill.BackgroundColor = XLColor.LightCoral;
            else if (estado.Texto == "Próximo")
                ws.Range(row, 1, row, headers.Length).Style.Fill.BackgroundColor = XLColor.LightYellow;
            
            totalStock += l.Stock;
            totalStockInicial += l.StockInicial;
            totalValor += (l.CostoUnitario ?? 0) * l.Stock;
            row++;
        }

        // Totales
        ws.Cell(row, 5).Value = "Totales"; ws.Cell(row, 5).Style.Font.Bold = true;
        ws.Cell(row, 6).Value = totalStock; ws.Cell(row, 6).Style.NumberFormat.Format = "#,##0.00"; ws.Cell(row, 6).Style.Font.Bold = true;
        ws.Cell(row, 7).Value = totalStockInicial; ws.Cell(row, 7).Style.NumberFormat.Format = "#,##0.00"; ws.Cell(row, 7).Style.Font.Bold = true;
        ws.Cell(row, 11).Value = totalValor; ws.Cell(row, 11).Style.NumberFormat.Format = "#,##0"; ws.Cell(row, 11).Style.Font.Bold = true;
        
        ws.Columns().AdjustToContents();
        using var ms = new System.IO.MemoryStream();
        wb.SaveAs(ms);
        var b64 = Convert.ToBase64String(ms.ToArray());
        var file = $"Lotes_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";
        await JS.InvokeVoidAsync("downloadFile", b64, file, "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet");
    }

