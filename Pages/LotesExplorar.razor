        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var usuario = auth.User?.Identity?.Name ?? "";
        var suc = SucursalProvider.GetSucursalNombre() ?? "";
        sb.AppendLine($"Generado={DateTime.Now:yyyy-MM-dd HH:mm};Usuario={usuario};Sucursal={suc}");
        sb.AppendLine(string.Join(sep, new[] { "Nro", "Código", "Producto", "Número Lote", "Depósito", "Stock", "Stock Inicial", "Fecha Vencimiento", "Días p/Venc.", "Fecha Ingreso", "Costo Unitario", "Estado" }));
        int n = 0;
        foreach (var l in _lotes)
        {
            var dias = l.FechaVencimiento.HasValue ? (int)(l.FechaVencimiento.Value - DateTime.Today).TotalDays : 0;
            var estado = ObtenerEstadoLote(l);
            string[] cols = new[]
            {
                (++n).ToString(),
                l.Producto?.CodigoBarras ?? l.Producto?.CodigoInterno ?? "",
                l.Producto?.Descripcion ?? "",
                l.NumeroLote,
                l.Deposito?.Nombre ?? "",
                l.Stock.ToString(System.Globalization.CultureInfo.InvariantCulture),
                l.StockInicial.ToString(System.Globalization.CultureInfo.InvariantCulture),
                l.FechaVencimiento?.ToString("yyyy-MM-dd") ?? "",
                l.FechaVencimiento.HasValue ? dias.ToString() : "",
                l.FechaIngreso.ToString("yyyy-MM-dd"),
                (l.CostoUnitario ?? 0).ToString(System.Globalization.CultureInfo.InvariantCulture),
                estado.Texto
            };
            var line = string.Join(sep, cols.Select(v => !string.IsNullOrEmpty(v) && (v.Contains(sep) || v.Contains('"') || v.Contains('\n')) ? $"\"{v.Replace("\"", "\"\"")}\"" : v ?? ""));
            sb.AppendLine(line);
        }
        var utf8bom = new System.Text.UTF8Encoding(encoderShouldEmitUTF8Identifier: true);
        var bytes = utf8bom.GetBytes(sb.ToString());
