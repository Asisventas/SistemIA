@code {
    private DateTime? fDesde;
    private DateTime? fHasta;
    private int fIdCaja = 0;
    private int fTurno = 0;
    private string? fProveedor;

    private bool cargando = false;
    private List<Caja> cajas = new();
    private List<PagoProveedor> pagos = new();
    private int maxTurnos = 3;
    
    private decimal totalMostrado = 0;
    private decimal totalEfectivo = 0;
    private decimal totalTransferencias = 0;
    private decimal totalOtros = 0;

    private PagoProveedor? pagoSeleccionado;

    protected override async Task OnInitializedAsync()
    {
        var sucId = SucursalProvider.GetSucursalId();
        if (!sucId.HasValue)
        {
            var ret = System.Net.WebUtility.UrlEncode(Nav.Uri);
            Nav.NavigateTo($"/seleccionar-sucursal?returnUrl={ret}", forceLoad: true);
            return;
        }

        await using var ctx = await DbFactory.CreateDbContextAsync();
        
        // Obtener caja actual para predeterminados
        var cajaActual = await ctx.Cajas.AsNoTracking().FirstOrDefaultAsync(c => c.CajaActual == 1);
        var fechaCaja = cajaActual?.FechaActualCaja ?? DateTime.Today;
        fDesde = fechaCaja;
        fHasta = fechaCaja;
        fTurno = cajaActual?.TurnoActual ?? 0;
        maxTurnos = cajaActual?.CantTurnos ?? 3;
        
        cajas = await ctx.Cajas.AsNoTracking().OrderBy(c => c.IdCaja).ToListAsync();

        await Buscar();
    }

    private async Task Buscar()
    {
        cargando = true;
        StateHasChanged();

        try
        {
            await using var ctx = await DbFactory.CreateDbContextAsync();
            var sucId = SucursalProvider.GetSucursalId();

            var fechaDesde = fDesde ?? DateTime.Today.AddDays(-7);
            var fechaHasta = (fHasta ?? DateTime.Today).AddDays(1);

            var query = ctx.PagosProveedores.AsNoTracking()
                .Where(p => p.FechaPago >= fechaDesde && p.FechaPago < fechaHasta);

            if (sucId.HasValue)
                query = query.Where(p => p.IdSucursal == sucId.Value);
            if (fIdCaja > 0)
                query = query.Where(p => p.IdCaja == fIdCaja);
            if (fTurno > 0)
                query = query.Where(p => p.Turno == fTurno);
            if (!string.IsNullOrWhiteSpace(fProveedor))
            {
                var filtro = fProveedor.Trim().ToLower();
                query = query.Where(p => p.Proveedor != null && 
                    (p.Proveedor.RazonSocial.ToLower().Contains(filtro) || 
                     p.Proveedor.RUC.Contains(filtro)));
            }

            pagos = await query
                .Include(p => p.Proveedor)
                .Include(p => p.Caja)
                .Include(p => p.Usuario)
                .Include(p => p.Compra)
                .Include(p => p.Detalles)
                .OrderByDescending(p => p.FechaPago)
                .ToListAsync();

            // Calcular totales (solo pagados, no anulados)
            var pagosPagados = pagos.Where(p => p.Estado != "Anulado").ToList();
            totalMostrado = pagosPagados.Sum(p => p.MontoTotal);
            
            totalEfectivo = pagosPagados
                .SelectMany(p => p.Detalles ?? new List<PagoProveedorDetalle>())
                .Where(d => d.MedioPago == "EFECTIVO" || d.MedioPago == "Efectivo")
                .Sum(d => d.Monto);

            totalTransferencias = pagosPagados
                .SelectMany(p => p.Detalles ?? new List<PagoProveedorDetalle>())
                .Where(d => d.MedioPago == "TRANSFERENCIA" || d.MedioPago == "Transferencia")
                .Sum(d => d.Monto);

            totalOtros = pagosPagados
                .SelectMany(p => p.Detalles ?? new List<PagoProveedorDetalle>())
                .Where(d => d.MedioPago != "EFECTIVO" && d.MedioPago != "Efectivo" && 
                           d.MedioPago != "TRANSFERENCIA" && d.MedioPago != "Transferencia")
                .Sum(d => d.Monto);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al buscar pagos: {ex.Message}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task Limpiar()
    {
        await using var ctx = await DbFactory.CreateDbContextAsync();
        var cajaActual = await ctx.Cajas.AsNoTracking().FirstOrDefaultAsync(c => c.CajaActual == 1);
        
        fDesde = cajaActual?.FechaActualCaja ?? DateTime.Today;
        fHasta = fDesde;
        fIdCaja = 0;
        fTurno = cajaActual?.TurnoActual ?? 0;
        fProveedor = null;
        
        await Buscar();
    }

    private void VerDetalle(PagoProveedor pago)
    {
        pagoSeleccionado = pago;
    }

    private void CerrarDetalle()
    {
        pagoSeleccionado = null;
    }

    private void IrAHistorial(int idCompra)
    {
        Nav.NavigateTo($"/pagos-proveedores/historial/{idCompra}");
    }

