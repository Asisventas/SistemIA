                    @foreach (var pago in pagos)
                    {
                        <tr class="@(pago.Estado == "Anulado" ? "table-danger" : "")">
                            <td>
                                <div>@pago.FechaPago.ToString("dd/MM/yyyy")</div>
                                <div class="text-muted small">@pago.FechaPago.ToString("HH:mm")</div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@(pago.NumeroRecibo ?? $"PAG-{pago.IdPagoProveedor:D6}")</span>
                            </td>
                            <td>
                                <div class="fw-semibold">@(pago.Proveedor?.RazonSocial ?? "N/A")</div>
                                <div class="text-muted small">@(pago.Proveedor?.RUC ?? "")</div>
                            </td>
                            <td>
                                @if (pago.Compra != null)
                                {
                                    <span class="badge bg-warning text-dark">Compra #@pago.IdCompra</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="fw-bold @(pago.Estado == "Anulado" ? "text-decoration-line-through" : "text-danger")">
                                    @pago.MontoTotal.ToString("N0") ‚Ç≤
                                </div>
                            </td>
                            <td>
                                @if (pago.Detalles != null && pago.Detalles.Any())
                                {
                                    @foreach (var det in pago.Detalles.Take(2))
                                    {
                                        <span class="badge @ObtenerBadgeMedioPago(det.MedioPago) me-1">
                                            @ObtenerIconoMedioPago(det.MedioPago) @det.Monto.ToString("N0")
                                        </span>
                                    }
                                    @if (pago.Detalles.Count > 2)
                                    {
                                        <span class="badge bg-secondary">+@(pago.Detalles.Count - 2)</span>
                                    }
                                }
                            </td>
                            <td>
                                <span class="badge bg-outline-dark border">@(pago.Caja?.Nombre ?? "N/A")</span>
                            </td>
                            <td>
                                @if (pago.Turno.HasValue)
                                {
                                    <span class="badge bg-primary">T@pago.Turno</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (pago.Estado == "Anulado")
                                {
                                    <span class="badge bg-danger">Anulado</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Pagado</span>
                                }
                            </td>
