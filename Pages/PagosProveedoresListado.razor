    private async Task Exportar()
    {
        if (!pagos.Any()) return;
        var sep = ';';
        var sb = new System.Text.StringBuilder();
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var usuario = auth.User?.Identity?.Name ?? "";
        var sucNombre = SucursalProvider.GetSucursalNombre() ?? "";
        sb.AppendLine($"Generado={DateTime.Now:yyyy-MM-dd HH:mm};Usuario={usuario};Sucursal={sucNombre}");
        sb.AppendLine(string.Join(sep, new[] { "Nro", "Fecha", "Hora", "Recibo", "Proveedor", "RUC", "Compra", "Monto", "Medio Pago", "Caja", "Turno", "Estado" }));
        int n = 0;
        foreach (var pago in pagos)
        {
            var recibo = pago.NumeroRecibo ?? $"PAG-{pago.IdPagoProveedor:D6}";
            var medio = pago.Detalles?.FirstOrDefault()?.MedioPago ?? "-";
            string[] cols = new[]
            {
                (++n).ToString(),
                pago.FechaPago.ToString("dd/MM/yyyy"),
                pago.FechaPago.ToString("HH:mm"),
                recibo,
                pago.Proveedor?.RazonSocial?.Replace("\"", "'") ?? "",
                pago.Proveedor?.RUC ?? "",
                pago.IdCompra.ToString(),
                pago.MontoTotal.ToString("N0"),
                medio,
                pago.Caja?.Nombre ?? "",
                pago.Turno?.ToString() ?? "",
                pago.Estado == "Anulado" ? "Anulado" : "OK"
            };
            var line = string.Join(sep, cols.Select(v => v != null && (v.Contains(sep) || v.Contains('"') || v.Contains('\n')) ? $"\"{v.Replace("\"", "\"\"")}\"" : v));
            sb.AppendLine(line);
        }
        var utf8bom = new System.Text.UTF8Encoding(encoderShouldEmitUTF8Identifier: true);
        var bytes = utf8bom.GetBytes(sb.ToString());
        var b64 = Convert.ToBase64String(bytes);
        var file = $"ListadoPagosProveedores_{DateTime.Now:yyyyMMdd_HHmmss}.csv";
        await JS.InvokeVoidAsync("downloadFile", b64, file, "text/csv;charset=utf-8");
    }
