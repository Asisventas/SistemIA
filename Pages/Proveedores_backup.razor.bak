@page "/proveedores"
@inject IDbContextFactory<SistemIA.Models.AppDbContext> DbFactory
@inject IJSRuntime JSRuntime
@using Microsoft.EntityFrameworkCore

<PageProtection Modulo="/proveedores" Permiso="VIEW">

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="bi bi-building me-2"></i>
                    Gestión de Proveedores
                </h2>
                <small class="text-muted">@DateTime.Now.ToString("dd/MM/yyyy")</small>
            </div>

            <!-- Botones de acción -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary" @onclick="MostrarModalNuevo">
                            <i class="bi bi-plus-circle me-2"></i>Nuevo Proveedor
                        </button>
                        <button class="btn btn-success" @onclick="CargarProveedores">
                            <i class="bi bi-arrow-clockwise me-2"></i>Actualizar
                        </button>
                    </div>
                </div>
            </div>

            <!-- Filtros de búsqueda -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Filtros de Búsqueda</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" @bind="filtroNombre" placeholder="Buscar por nombre..." />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">RUC</label>
                            <input type="text" class="form-control" @bind="filtroRUC" placeholder="Buscar por RUC..." />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Estado</label>
                            <select class="form-select" @bind="filtroEstado">
                                <option value="">Todos los estados</option>
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <button class="btn btn-primary me-2" @onclick="FiltrarProveedores">
                                <i class="bi bi-search me-2"></i>Buscar
                            </button>
                            <button class="btn btn-secondary" @onclick="LimpiarFiltros">
                                <i class="bi bi-x-circle me-2"></i>Limpiar
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabla de proveedores -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Lista de Proveedores</h5>
                    <span class="badge bg-primary">@proveedoresFiltrados.Count registros</span>
                </div>
                <div class="card-body p-0">
                    @if (cargando)
                    {
                        <div class="text-center p-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-2">Cargando proveedores...</p>
                        </div>
                    }
                    else if (proveedoresFiltrados.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 proveedores-table">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="col-codigo">Código</th>
                                        <th class="col-nombre">Nombre</th>
                                        <th class="col-ruc">RUC</th>
                                        <th class="col-telefono">Teléfono</th>
                                        <th class="col-email">Email</th>
                                        <th class="col-estado">Estado</th>
                                        <th class="col-acciones">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var proveedor in proveedoresFiltrados.Take(50))
                                    {
                                        <tr>
                                            <td class="col-codigo"><span class="badge bg-secondary">@proveedor.CodigoProveedor</span></td>
                                            <td class="col-nombre">
                                                <strong>@proveedor.Nombre</strong>
                                                @if (!string.IsNullOrEmpty(proveedor.Rubro))
                                                {
                                                    <br><small class="text-muted">@proveedor.Rubro</small>
                                                }
                                            </td>
                                            <td class="col-ruc">@proveedor.RUC</td>
                                            <td class="col-telefono">@(proveedor.Telefono ?? "No especificado")</td>
                                            <td class="col-email">@(proveedor.Correo ?? "No especificado")</td>
                                            <td class="col-estado">
                                                @if (proveedor.EstadoProveedor == "Activo")
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                            </td>
                                            <td class="col-acciones">
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-info" @onclick="() => VerDetalles(proveedor)" title="Ver detalles">
                                                        <i class="bi bi-eye-fill"></i>
                                                    </button>
                                                    <button class="btn btn-warning" @onclick="() => EditarProveedor(proveedor)" title="Editar">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </button>
                                                    <button class="btn btn-danger" @onclick="() => EliminarProveedor(proveedor)" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (proveedoresFiltrados.Count > 50)
                        {
                            <div class="alert alert-info m-3">
                                <i class="bi bi-info-circle me-2"></i>
                                Mostrando los primeros 50 registros de @proveedoresFiltrados.Count total. Use filtros para refinar la búsqueda.
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center p-4">
                            <i class="bi bi-building display-1 text-muted"></i>
                            <h5 class="mt-3">No se encontraron proveedores</h5>
                            <p class="text-muted">No hay proveedores registrados o no coinciden con los filtros aplicados.</p>
                            <button class="btn btn-primary" @onclick="MostrarModalNuevo">
                                <i class="bi bi-plus-circle me-2"></i>Agregar Primer Proveedor
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para nuevo/editar proveedor -->
<div class="modal fade @(mostrarModal ? "show" : "")" style="display: @(mostrarModal ? "block" : "none")" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h5 class="modal-title">@(proveedorEditando?.Id_Proveedor > 0 ? "Editar Proveedor" : "Nuevo Proveedor")</h5>
                <button type="button" class="btn-close" @onclick="CerrarModal"></button>
            </div>
            <div class="modal-body py-2">
                <div class="row g-2">
                    <div class="col-4">
                        <label class="form-label mb-0 small">Código *</label>
                        <input type="text" class="form-control form-control-sm" @bind="CodigoProveedorBound" />
                    </div>
                    <div class="col-5">
                        <label class="form-label mb-0 small">RUC *</label>
                        <input type="text" class="form-control form-control-sm" @bind="RucBound" />
                    </div>
                    <div class="col-3">
                        <label class="form-label mb-0 small">Estado</label>
                        <select class="form-select form-select-sm" @bind="EstadoBound">
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label mb-0 small">Nombre / Razón Social *</label>
                        <input type="text" class="form-control form-control-sm" @bind="NombreBound" />
                    </div>
                    <div class="col-6">
                        <label class="form-label mb-0 small">Teléfono</label>
                        <input type="text" class="form-control form-control-sm" @bind="TelefonoBound" />
                    </div>
                    <div class="col-6">
                        <label class="form-label mb-0 small">Email</label>
                        <input type="email" class="form-control form-control-sm" @bind="CorreoBound" />
                    </div>
                </div>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-secondary btn-sm" @onclick="CerrarModal">Cancelar</button>
                <button type="button" class="btn btn-primary btn-sm" @onclick="GuardarProveedor">
                    <i class="bi bi-save me-1"></i>Guardar
                </button>
            </div>
        </div>
    </div>
</div>

@if (mostrarModal)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<Proveedor> todosLosProveedores = new();
    private List<Proveedor> proveedoresFiltrados = new();
    private bool cargando = true;
    private bool mostrarModal = false;
    private Proveedor proveedorEditando = new() { CodigoProveedor = string.Empty, Nombre = string.Empty, RUC = string.Empty };

    // Wrappers no anulables para binding seguro
    private string CodigoProveedorBound { get => proveedorEditando?.CodigoProveedor ?? string.Empty; set { if (proveedorEditando != null) proveedorEditando.CodigoProveedor = value; } }
    private string RucBound { get => proveedorEditando?.RUC ?? string.Empty; set { if (proveedorEditando != null) proveedorEditando.RUC = value; } }
    private string NombreBound { get => proveedorEditando?.Nombre ?? string.Empty; set { if (proveedorEditando != null) proveedorEditando.Nombre = value; } }
    private string DireccionBound { get => proveedorEditando?.Direccion ?? string.Empty; set { if (proveedorEditando != null) proveedorEditando.Direccion = string.IsNullOrWhiteSpace(value) ? null : value; } }
    private string TelefonoBound { get => proveedorEditando?.Telefono ?? string.Empty; set { if (proveedorEditando != null) proveedorEditando.Telefono = string.IsNullOrWhiteSpace(value) ? null : value; } }
    private string CorreoBound { get => proveedorEditando?.Correo ?? string.Empty; set { if (proveedorEditando != null) proveedorEditando.Correo = string.IsNullOrWhiteSpace(value) ? null : value; } }
    private string RubroBound { get => proveedorEditando?.Rubro ?? string.Empty; set { if (proveedorEditando != null) proveedorEditando.Rubro = string.IsNullOrWhiteSpace(value) ? null : value; } }
    private string ContactoBound { get => proveedorEditando?.Contacto ?? string.Empty; set { if (proveedorEditando != null) proveedorEditando.Contacto = string.IsNullOrWhiteSpace(value) ? null : value; } }
    private string EstadoBound { get => proveedorEditando?.EstadoProveedor ?? "Activo"; set { if (proveedorEditando != null) proveedorEditando.EstadoProveedor = value; } }

    // Filtros
    private string filtroNombre = "";
    private string filtroRUC = "";
    private string filtroEstado = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarProveedores();
    }

    private async Task CargarProveedores()
    {
        try
        {
            cargando = true;
            await using var context = await DbFactory.CreateDbContextAsync();

            // Cargar solo columnas existentes; la entidad ignora propiedades no mapeadas
            todosLosProveedores = await context.Proveedores
                .OrderBy(p => p.Nombre)
                .AsNoTracking()
                .ToListAsync();

            await FiltrarProveedores();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error al cargar proveedores: {ex.Message}");
        }
        finally
        {
            cargando = false;
        }
    }

    private Task FiltrarProveedores()
    {
        proveedoresFiltrados = todosLosProveedores.Where(p =>
            (string.IsNullOrEmpty(filtroNombre) || p.Nombre.Contains(filtroNombre, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(filtroRUC) || p.RUC.Contains(filtroRUC)) &&
            (string.IsNullOrEmpty(filtroEstado) || (p.EstadoProveedor ?? "Activo") == filtroEstado)
        ).ToList();

        StateHasChanged();
        return Task.CompletedTask;
    }

    private Task LimpiarFiltros()
    {
        filtroNombre = "";
        filtroRUC = "";
        filtroEstado = "";
        return FiltrarProveedores();
    }

    private void MostrarModalNuevo()
    {
        proveedorEditando = new Proveedor
        {
            CodigoProveedor = "",
            Nombre = "",
            RUC = "",
            EstadoProveedor = "Activo",
            FechaCreacion = DateTime.Now,
            UsuarioCreacion = "Sistema"
        };
        mostrarModal = true;
    }

    private void EditarProveedor(Proveedor proveedor)
    {
        proveedorEditando = new Proveedor
        {
            Id_Proveedor = proveedor.Id_Proveedor,
            CodigoProveedor = proveedor.CodigoProveedor ?? "",
            Nombre = proveedor.Nombre ?? "",
            Direccion = proveedor.Direccion,
            Telefono = proveedor.Telefono,
            Rubro = proveedor.Rubro,
            RUC = proveedor.RUC ?? "",
            DV = proveedor.DV,
            Correo = proveedor.Correo,
            Contacto = proveedor.Contacto,
            EstadoProveedor = proveedor.EstadoProveedor,
            VencimientoTimbrado = proveedor.VencimientoTimbrado,
            Timbrado = proveedor.Timbrado,
            IdTipoContribuyente = proveedor.IdTipoContribuyente,
            CodigoContribuyente = proveedor.CodigoContribuyente,
            FechaCreacion = proveedor.FechaCreacion,
            UsuarioCreacion = proveedor.UsuarioCreacion
        };
        mostrarModal = true;
    }

    private async Task GuardarProveedor()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(proveedorEditando.CodigoProveedor) ||
                string.IsNullOrWhiteSpace(proveedorEditando.Nombre) ||
                string.IsNullOrWhiteSpace(proveedorEditando.RUC))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Complete los campos obligatorios (Código, Nombre y RUC)");
                return;
            }

            await using var context = await DbFactory.CreateDbContextAsync();

            if (proveedorEditando.Id_Proveedor > 0)
            {
                // Editar
                proveedorEditando.FechaModificacion = DateTime.Now;
                proveedorEditando.UsuarioModificacion = "Sistema";
                context.Proveedores.Update(proveedorEditando);
            }
            else
            {
                // Nuevo
                context.Proveedores.Add(proveedorEditando);
            }

            await context.SaveChangesAsync();
            await JSRuntime.InvokeVoidAsync("alert", "Proveedor guardado exitosamente");
            
            CerrarModal();
            await CargarProveedores();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error al guardar: {ex.Message}");
        }
    }

    private async Task EliminarProveedor(Proveedor proveedor)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar el proveedor '{proveedor.Nombre}'?"))
        {
            try
            {
                await using var context = await DbFactory.CreateDbContextAsync();
                context.Proveedores.Remove(proveedor);
                await context.SaveChangesAsync();
                
                await JSRuntime.InvokeVoidAsync("alert", "Proveedor eliminado exitosamente");
                await CargarProveedores();
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error al eliminar: {ex.Message}");
            }
        }
    }

    private async Task VerDetalles(Proveedor proveedor)
    {
        var detalles = $"Código: {proveedor.CodigoProveedor}\n" +
                      $"Nombre: {proveedor.Nombre}\n" +
                      $"RUC: {proveedor.RUC}\n" +
                      $"Dirección: {proveedor.Direccion ?? "No especificada"}\n" +
                      $"Teléfono: {proveedor.Telefono ?? "No especificado"}\n" +
                      $"Email: {proveedor.Correo ?? "No especificado"}\n" +
                      $"Rubro: {proveedor.Rubro ?? "No especificado"}\n" +
                      $"Estado: {proveedor.EstadoProveedor}\n" +
                      $"Contacto: {proveedor.Contacto ?? "No especificado"}\n" +
                      $"Fecha Creación: {proveedor.FechaCreacion:dd/MM/yyyy}";

        await JSRuntime.InvokeVoidAsync("alert", detalles);
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        proveedorEditando = new();
    }
}

</PageProtection>
}
